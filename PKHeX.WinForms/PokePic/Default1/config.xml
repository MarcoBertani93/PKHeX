<ImageConfig width="800" height="600">

    <Resources>
        <Font family="pixelated" file="PocketPixelRegular.ttf"/>
        <Image name="immagine" file="pencil.png"/>
    </Resources>

    <Graphics>

        <Rectangle>
            <Area ref="banana">
                <X>10</X>
                <Y>20</Y>
            </Area>
            <Color>
                <Linear start="10,20" end="60,110">
                    <Stops>
                        <Stop position="0.1" solid="#11AA55"></Stop>
                        <Stop>0.99,#BB0022</Stop>
                        <Stop>
                            <Position>0.7</Position>
                            <Solid>#5500EE</Solid>
                        </Stop>
                    </Stops>
                </Linear>

            </Color>
            <Border width="5" color="#FF8800" alignment="outset"/>
        </Rectangle>

    </Graphics>

    <Variables>
        <Area id="banana">
            <Width>100</Width>
            <Height>200</Height>
        </Area>
    </Variables>

</ImageConfig>
